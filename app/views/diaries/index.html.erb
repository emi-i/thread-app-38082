<%= render partial: "header" %>
<div class="index">
  <div class="diary_index">
    <div class="diary_main">
    <div class="logo">
     <div class="diary_logo">Thread</div>
     <div class="diary_sub_logo">見守りアプリ</div>
    </div>
     <div class="sub-logo">こんにちは、<%= current_user.nickname %>さん</div>
      <% @diaries.each do |diary| %>
      <div class="diary_list">

        <div class="date_nickname">
          <div class="date">
            <%= diary.date %>
          </div>
          <div class="nickname">
             <%= link_to diary.user.nickname, user_path(diary.user.id), class: "show_button" %>
          </div>
        </div>

        <div class="title">
          <%= link_to diary.title, diary_path(diary.id), class: "show_button" %>
        </div>

        <div class="content">
          <%= diary.content %>
        </div>

      </div>
      <% end %>
    </div>
  </div>
</div>