<%= render partial: "header" %>

<div class="show">
  <div class="diary_show">
    <div class="diary_main">
      <div class="show_list">

        <div class="date_nickname">
          <div class="date">
            <%= @diary.date %>
          </div>
          <div class="nickname">
            <%=  @diary.user.nickname %>
          </div>
        </div>

        <div class="title">
          <%= @diary.title %>
        </div>

        <div class="show_content">
          <%= safe_join(@diary.content.split("\n"),tag(:br)) %>
        </div>
      </div>

          <div class="show_list">
          
          <div id="diary_<%= @diary.id %>">
          <%= render partial:'favorite', locals: {diary: @diary} %>
          </div>

        <% if @diary.user_id == current_user.id %>
            <div class="destroy_edit_button">
                <%= link_to "削除", diary_path, method: :delete, class: "destroy_button" %>
                <%= link_to "編集", edit_diary_path(@diary.id), class: "edit_button" %>
            </div>
        <% end %>
          </div>

    </div>
  </div>
</div>
